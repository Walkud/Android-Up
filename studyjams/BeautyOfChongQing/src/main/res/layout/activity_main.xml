<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.studyjams.s1.sj10.zhuliya.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/img_main_top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:text="旅游胜地" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <Button
            android:id="@+id/jieFangBeiBtn"
            style="@style/CardBtn"
            android:text="解放碑" />

        <Button
            android:id="@+id/renMinDaLiTangBtn"
            style="@style/CardBtn"
            android:text="人民大礼堂" />

        <Button
            android:id="@+id/hongYaDongBtn"
            style="@style/CardBtn"
            android:text="洪崖洞" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <Button
            android:id="@+id/ciQiKouGuZhenBtn"
            style="@style/CardBtn"
            android:text="磁器口古镇" />

        <Button
            android:id="@+id/jinFoShanBtn"
            style="@style/CardBtn"
            android:text="金佛山" />

        <Button
            android:id="@+id/daZuShiKeBtn"
            style="@style/CardBtn"
            android:text="大足石刻" />

    </LinearLayout>

</LinearLayout>
