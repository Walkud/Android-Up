<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:text="Team A"
                android:textColor="#616161"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/teamScoreA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:text="0"
                android:textColor="#616161"
                android:textSize="50sp" />

            <Button
                android:id="@+id/fa3Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 Point"
                android:textColor="#616161"
                android:textSize="14sp" />

            <Button
                android:id="@+id/fa2Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 Point"
                android:textColor="#616161"
                android:textSize="14sp" />

            <Button
                android:id="@+id/ftaBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:textColor="#616161"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:background="#616161" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:text="Team B"
                android:textColor="#616161"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/teamScoreB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="8dp"
                android:text="0"
                android:textColor="#616161"
                android:textSize="50sp" />

            <Button
                android:id="@+id/fb3Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 Point"
                android:textColor="#616161"
                android:textSize="14sp" />

            <Button
                android:id="@+id/fb2Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 Point"
                android:textColor="#616161"
                android:textSize="14sp" />

            <Button
                android:id="@+id/ftbBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:textColor="#616161"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:text="重置"
        android:textSize="14sp" />

</RelativeLayout>